    "scripts": [
      {
        "file": "odh-tourism-skiinfo.min.js",
        "parameter": ""
      }
    ]
  },
  "configuration": {
    "tagName": "odh-tourism-skiinfo",
    "options": [
      {
        "key": "id-list",
        "type": "text",
        "label": "List of ski area ids separated by ',' (see bottom left of a detail card)",
        "required": false,
        "options": {}
      },
      {
        "key": "language",
        "type": "select",
        "label": "Language",
        "required": false,
        "options": {
          "values": ["en", "de", "it"],
          "default": "de"
        }
      },
      {
        "key": "source-filter",
        "type": "select",
        "label": "Filter by dataprovider",
        "required": false,
        "options": {
          "values": [
            "lts",
            "idm",
            "siag",
            "dss",
            "suedtirolwein",
            "sta",
            "archapp"
          ]
        }
      },
      {
        "key": "loc-filter",
        "type": "text",
        "label": "Location Filter (pass type + id check out https://tourism.opendatahub.com/v1/Location)",
        "required": false,
        "options": {
          "default": ""
        }
      },
      {
        "key": "enable-placeholder",
        "type": "null",
        "label": "Enable Image Placeholder",
        "required": false,
        "options": {
          "default": true
        }
      },
      {
        "key": "page-size",
        "type": "number",
        "label": "Number of list items per page",
        "required": false,
        "options": {
          "default": 30
        }
      }
    ]
  }
}
